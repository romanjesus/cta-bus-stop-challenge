<div class="container-fluid">
  <h1 class="text-center"> Stop <%= @stop.clean_name %> & <%= @stop.cross_street %></h1>
    <h3 class="text-center"><%= "Total Routes: #{@stop.num_of_routes}" %></h3>

  <div class="row">
    <div class="col-xs-3">
      <h3> Routes </h3>
      <ul>
        <% @stop.routes.each do |route| %>
          <li> <%= route.name %> </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-3">
        <%= column_chart @stats, width: "750px" %>
    </div>
  </div>

</div>
